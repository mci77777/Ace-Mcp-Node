{
  "name": "codebase-mcp-monorepo",
  "version": "0.1.4",
  "description": "MCP server for codebase retrieval and prompt enhancement - Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build -w @codebase-mcp/shared",
    "build:prompt-enhance": "npm run build -w @codebase-mcp/prompt-enhance",
    "build:retrieval": "npm run build -w @codebase-mcp/retrieval",
    "dev": "npm run dev --workspaces --if-present",
    "dev:prompt-enhance": "npm run dev -w @codebase-mcp/prompt-enhance",
    "dev:retrieval": "npm run dev -w @codebase-mcp/retrieval",
    "test": "npm run test --workspaces --if-present",
    "test:retrieval": "npm run test -w @codebase-mcp/retrieval",
    "clean": "npm run clean --workspaces --if-present",
    "package:prompt-enhance": "npm run package -w @codebase-mcp/prompt-enhance",
    "deploy:prepare": "node scripts/deploy-prepare.js",
    "deploy": "node scripts/deploy.js"
  },
  "keywords": ["mcp", "codebase", "indexing", "semantic-search"],
  "author": "wmymz <wmymz@icloud.com>",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@iarna/toml": "^2.2.5",
    "axios": "^1.7.0",
    "express": "^4.18.0",
    "ws": "^8.18.0",
    "ignore": "^6.0.0",
    "zod": "^3.25.76",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.0",
    "@types/ws": "^8.5.12",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
