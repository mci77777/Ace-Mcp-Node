                        return;
                    }

                    console.log('[Load Files] Starting file tree load', {
                        projectPath: this.enhanceForm.projectPath,
                        timestamp: new Date().toISOString()
                    });

                    // Timeout controller for request
                    const controller = new AbortController();
                    const timeoutId = setTimeout(() => {
                        controller.abort();
                        console.error('[Load Files] Request timeout after 30 seconds');
                    }, 30000); // 30 second timeout

                    try {
                        this.fileTree.loading = true;
                        this.fileTree.error = '';
                        this.fileTree.loaded = false;

                        const response = await fetch('/api/files/list', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                project_path: this.enhanceForm.projectPath,
                                max_depth: 3
                            }),
                            signal: controller.signal
                        });

                        clearTimeout(timeoutId);

                        if (response.ok) {
                            const result = await response.json();
                            this.fileTree.files = result.files || [];
                            this.fileTree.loaded = true;
                            this.fileTree.error = '';
                            
                            const fileCount = this.countTotalFiles(this.fileTree.files);
                            console.log('[Load Files] Files loaded successfully', {
                                fileCount,
                                timestamp: new Date().toISOString()
                            });
                            
                            this.showSuccessNotification(
                                this.lang === 'zh' 
                                    ? `æˆåŠŸåŠ è½½ ${fileCount} ä¸ªæ–‡ä»¶` 
                                    : `Successfully loaded ${fileCount} files`
                            );
                        } else {
                            let errorMessage = '';
                            let errorDetails = {};
                            
                            try {
                                const error = await response.json();
                                errorMessage = error.error || 'Failed to load files';
                                errorDetails = error;
                                console.error('[Load Files] Server error:', {
                                    status: response.status,
                                    statusText: response.statusText,
                                    error: errorDetails,
                                    timestamp: new Date().toISOString()
                                });
                            } catch (parseError) {
                                errorMessage = `HTTP ${response.status}: ${response.statusText}`;
                                console.error('[Load Files] Failed to parse error response:', {
                                    parseError: parseError.message,
                                    status: response.status,
                                    timestamp: new Date().toISOString()
                                });
                            }
                            
                            this.fileTree.error = errorMessage;
                            this.fileTree.loaded = false;
                            
                            // User-friendly error message with retry option
                            let userMessage = '';
                            let showRetry = false;
                            
                            if (response.status === 400) {
                                userMessage = this.lang === 'zh' 
                                    ? `è·¯å¾„æ— æ•ˆ: ${errorMessage}` 
                                    : `Invalid path: ${errorMessage}`;
                            } else if (response.status === 403) {
                                userMessage = this.lang === 'zh' 
                                    ? 'æƒé™ä¸è¶³ï¼Œæ— æ³•è®¿é—®è¯¥è·¯å¾„' 
                                    : 'Permission denied accessing path';
                            } else if (response.status === 404) {
                                userMessage = this.lang === 'zh' 
                                    ? 'è·¯å¾„ä¸å­˜åœ¨æˆ–æ— æ³•è®¿é—®' 
                                    : 'Path does not exist or is not accessible';
                            } else if (response.status >= 500) {
                                userMessage = this.lang === 'zh' 
                                    ? `æœåŠ¡å™¨é”™è¯¯: ${errorMessage}` 
                                    : `Server error: ${errorMessage}`;
                                showRetry = true;
                            } else {
                                userMessage = errorMessage;
                                showRetry = true;
                            }
                            
                            this.showErrorNotification(userMessage, showRetry ? () => this.loadProjectFiles() : null);
                        }
                    } catch (error) {
                        clearTimeout(timeoutId);
                        
                        console.error('[Load Files] Network or unexpected error:', {
                            errorName: error.name,
                            errorMessage: error.message,
                            errorStack: error.stack,
                            timestamp: new Date().toISOString()
                        });
                        
                        let userMessage = '';
                        let showRetry = false;
                        
                        if (error.name === 'AbortError') {
                            userMessage = this.lang === 'zh' 
                                ? 'è¯·æ±‚è¶…æ—¶ï¼ˆ30ç§’ï¼‰ï¼Œè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥æˆ–ç¨åé‡è¯•' 
                                : 'Request timeout (30s), please check network or retry later';
                            showRetry = true;
                        } else if (error.name === 'TypeError' && error.message.includes('fetch')) {
                            userMessage = this.lang === 'zh' 
                                ? 'ç½‘ç»œè¿æ¥å¤±è´¥ï¼Œè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥' 
