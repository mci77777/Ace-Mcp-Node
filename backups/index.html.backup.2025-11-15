                    if (diff < 3600000) return `${Math.floor(diff / 60000)}${this.lang === 'zh' ? 'åˆ†é’Ÿå‰' : 'm ago'}`;
                    if (diff < 86400000) return `${Math.floor(diff / 3600000)}${this.lang === 'zh' ? 'å°æ—¶å‰' : 'h ago'}`;
                    return date.toLocaleDateString();
