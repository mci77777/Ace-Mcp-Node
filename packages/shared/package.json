{
  "name": "@codebase-mcp/shared",
  "version": "0.1.0",
  "description": "Shared core utilities for Codebase MCP - configuration, logging, and file utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "import": "./dist/logger.js"
    },
    "./logBroadcaster": {
      "types": "./dist/logBroadcaster.d.ts",
      "import": "./dist/logBroadcaster.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "mcp",
    "shared",
    "utilities",
    "configuration",
    "logging"
  ],
  "author": "wmymz <wmymz@icloud.com>",
  "license": "ISC",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "ignore": "^6.0.0",
    "iconv-lite": "^0.6.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/ws": "^8.5.13",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
