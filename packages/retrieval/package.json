{
  "name": "@codebase-mcp/retrieval",
  "version": "0.1.0",
  "description": "MCP server for codebase indexing and semantic search",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "codebase-retrieval": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "node -e \"const fs = require('fs'); if (fs.existsSync('src/web/templates')) fs.cpSync('src/web/templates', 'dist/web/templates', {recursive: true})\"",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:web": "node dist/index.js --web-port 8090",
    "clean": "rimraf dist",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "mcp",
    "codebase",
    "indexing",
    "semantic-search",
    "retrieval"
  ],
  "author": "wmymz <wmymz@icloud.com>",
  "license": "ISC",
  "dependencies": {
    "@codebase-mcp/shared": "*",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "express": "^4.18.0",
    "axios": "^1.7.0",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.0",
    "@types/ws": "^8.5.12",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
